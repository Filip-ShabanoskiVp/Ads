<div class="container">
    <div class="card mb-4">
        <div class="card-header">
            <h2>Препорачај оглас: @ViewBag.oglas</h2>
            </div>
        <div class="card-body">
            <p>Препорачан оглас од корисник: @ViewBag.KorisnickoIme</p>
            <form asp-controller="Oglas" asp-action="Preporachaj" method="post">

                <label>Препорачај оглас до корисник:</label>
                <input type="text" name="id" class="form-control" />
                <input type="hidden" name="oglasId" value="@ViewBag.oglas" />
                <button type="submit" class="btn btn-primary">Препорачај</button>
                <a asp-action="Details" asp-route-id="@ViewBag.oglas" asp-controller="Oglas">Детали за огласот</a>

                @if (@ViewBag.Message != null)
                {
                    <p class="text-danger">@ViewBag.Message</p>
                }
            </form>
            </div>
        </div>
    </div>

