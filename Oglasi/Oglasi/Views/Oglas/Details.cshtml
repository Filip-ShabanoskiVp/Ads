@model Oglasi.Models.Oglas

@{
    ViewData["Title"] = "Details";
}

<br />
<br />
<br />
<br />

    <div class="container">
        <div class="card mb-4">
            <div class="card-header">
<h1>Детали за огласот</h1>
                </div>
            <div class="card-body">

<div>
    <h4>Оглас</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImeOglas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImeOglas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cena)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Datum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Datum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImeKatNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImeKatNavigation.ImeKat)
        </dd>
    </dl>
</div>
<div>
    @if (ViewBag.KorisnickoIme == null && ViewBag.admins == null)
    {
        <input type="button" value="Препорачај оглас" class="btn btn-primary" disabled/>
    }
    else
    {
        <a type="button" class="btn btn-primary" 
               asp-action="Preporachaj" asp-controller="Oglas">Препорачај оглас</a>
    }
</div>
<br />
<div>
    @if (ViewBag.KorisnickoIme == null && ViewBag.admins == null)
    {
        <input type="button" value="Зачувај оглас" class="btn btn-primary" disabled />
        <input type="button" value="Купи оглас" class="btn btn-primary" id="btnKupi" disabled />
    }
    else
    {
        
<a type="button"  asp-route-id="@Model.IdOglas"
        asp-controller="Oglas" asp-action="Zachuvaj" class="btn btn-primary">
    Зачувај оглас</a>
        
        <a asp-controller="Oglas" asp-action="kupi_oglas" class="btn btn-primary">Купи оглас</a>
        }

        <a asp-action="Index">Листа на огласи</a>
    </div>

    <p class="text-danger">@ViewBag.messagee</p>

  </div>
            </div>
        </div>

