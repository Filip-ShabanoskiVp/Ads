            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ulica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (item.KorisnickoIme == @ViewBag.KorisnickoIme)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.ImeKor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrezimeKor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelefonskiBroj)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ulica)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grad)
                    </td>
                    <td>

