                @Html.DisplayNameFor(model => model.ImeKor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrezimeKor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefonskiBroj)
