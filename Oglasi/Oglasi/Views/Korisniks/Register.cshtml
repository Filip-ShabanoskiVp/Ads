@model Oglasi.Models.Korisnik

@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<br />
<br />
<div class="container">
    <div class="card mb-4">
        <div class="card-header">
            <h1>Регистрирајте се</h1>
        </div>
        <div class="card-body">
            <h4 class="text-danger">@ViewBag.Message</h4>
            
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="KorisnickoIme" class="control-label"></label>
                            <input asp-for="KorisnickoIme" class="form-control" />
                            <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Lozinka" class="control-label"></label>
                            <input asp-for="Lozinka" class="form-control" type="password" />
                            <span asp-validation-for="Lozinka" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImeKor" class="control-label"></label>
                            <input asp-for="ImeKor" class="form-control" />
                            <span asp-validation-for="ImeKor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PrezimeKor" class="control-label"></label>
                            <input asp-for="PrezimeKor" class="form-control" />
                            <span asp-validation-for="PrezimeKor" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TelefonskiBroj" class="control-label"></label>
                            <input asp-for="TelefonskiBroj" class="form-control" />
                            <span asp-validation-for="TelefonskiBroj" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mail" class="control-label"></label>
                            <input asp-for="Mail" class="form-control" />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ulica" class="control-label"></label>
                            <input asp-for="Ulica" class="form-control" />
                            <span asp-validation-for="Ulica" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Grad" class="control-label"></label>
                            <input asp-for="Grad" class="form-control" />
                            <span asp-validation-for="Grad" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Регистрирај се" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            </div>
        </div>
    </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
